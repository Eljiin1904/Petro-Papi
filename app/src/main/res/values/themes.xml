<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme with no ActionBar -->
    <style name="Theme.PetroPapi.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Disable the default window ActionBar -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>

        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Default window background -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- You can keep your splash theme as is -->
    <style name="Theme.PetroPapi.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>
</resources>
